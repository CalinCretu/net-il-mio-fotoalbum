@using net_il_mio_fotoalbum.Data
@model PhotoFormModel

<div class="container">

    <form asp-controller="Photo" asp-action="UpdatePhoto" asp-route-id="@Model.Photo.Id" method="post">

        @Html.AntiForgeryToken()

        <div class="mb-3">
            <strong>Titolo:</strong>
            <input asp-for="Photo.Title" class="d-block w-100" />
            <span asp-validation-for="Photo.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Descrizione:</strong>
            <input asp-for="Photo.Description" class="d-block w-100" />
            <span asp-validation-for="Photo.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Immagine:</strong>
            <input asp-for="Photo.ImageUrl" class="d-block w-100" />
            <span asp-validation-for="Photo.ImageUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Visibilità:</strong>
            <input asp-for="Photo.IsVisible" class="d-block w-100" />
            <span asp-validation-for="Photo.IsVisible" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Categorie:</strong>
            @for (int i = 0; i < Model.Categories.Count; i++)
            {
                <div>
                    <input type="checkbox" name="SelectedCategories" value="@Model.Categories[i].Value"
                    @(Model.SelectedCategories.Contains(Model.Categories[i].Value) ? "checked" : "") />
                    @Model.Categories[i].Text
                </div>
            }
        </div>
        <div class="col"><a href="@Url.Action("Index", "Photo")">Indietro</a></div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Modifica" />
        </div>
    </form>
</div>